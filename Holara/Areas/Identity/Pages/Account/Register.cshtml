@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="container">
        <h4>Create a new account</h4>
        <div class="panel-footer">
            <div class="row">
                <div class="eight columns">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="u-full-width" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                    <label asp-for="Input.UserName"></label>
                    <input asp-for="Input.UserName" class="u-full-width" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="u-full-width" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="u-full-width" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="u-full-width" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <button type="submit" class="btn btn-default">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
